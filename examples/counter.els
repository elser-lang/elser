(ns counter)

(storage
 {:external
  [(def count [:u256])]})

(functions
 {:external
  [
   (defn get [] (-> [(c :u256)])
     (-> c (sto read! count)))

   (defn inc [] (-> [])
     (let [c (sto read! count)]
       (sto write! count (+ c 1))))

   (defn dec [] (-> [])
     (let [c (sto read! count)]
       (sto write! count (- c 1))))
   ]})
